<Window x:Class="ToastNotifications.Display.NotificationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToastNotifications.Display"
        xmlns:core="clr-namespace:ToastNotifications.Core"
        mc:Ignorable="d"
        Title="NotificationsWindow" 
        
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None" 
        WindowState="Normal" 
        WindowStartupLocation="Manual" 
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight" 
        Topmost="True" 
        ShowActivated="False"
        >
    <Grid>
        <local:NotificationsItemsControl x:Name="NotificationsList" ShouldReverseItems="False" />
    </Grid>
</Window>

